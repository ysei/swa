<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
		<%= javascript_include_tag 'modernizr-1.6.min' %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
			<div class="saved-searches">
				<%= link_to 'retailers list', retailers_path %> | 
				<%= link_to 'your search history', queries_index_path %>
			</div>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
			<% if !cookies[:user_ip].blank? && params[:controller] != 'welcome' %>
				<div class='search-box'>
					<%= form_tag retailers_search_path, :method => :get do %>
						<%= text_field :query, :query_term, :placeholder => 'e.g: Amazon' %>
						<%= submit_tag 'search' %>
					<% end %>
				</div>
			<% end %>
      <%= yield %>
    </div>
  </body>
</html>
